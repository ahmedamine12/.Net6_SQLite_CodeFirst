@page
@model WebApplication1Generated.Pages.Produit.UpdateModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Update</h1>

<h4>Produit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data"> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden input for the ID -->
            <input asp-for="Produit.Id" type="hidden" />

            <div class="form-group">
                <label asp-for="Produit.Nom" class="control-label"></label>
                <input asp-for="Produit.Nom" class="form-control" />
                <span asp-validation-for="Produit.Nom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Produit.Description" class="control-label"></label>
                <input asp-for="Produit.Description" class="form-control" />
                <span asp-validation-for="Produit.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produit.CategorieId" class="control-label">Category</label>
                <select asp-for="Produit.CategorieId" asp-items="Model.Categories" class="form-control"></select>
            </div>


            <div class="form-group">
                <label>Upload Image (Leave blank to keep existing)</label>
                <input type="file" asp-for="UploadedImage" />
            </div>
            
            

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
